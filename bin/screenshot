#!/bin/bash
# A bemenu script for taking screenshots for wayland
# DEPS: wl-clipboard, slurp, grim, bemenu, yazi (optional), wf-recorder (optional)
# Usage: screenshot [OPTIONS] [command]
# OPTIONS:
#   -r --record   record video (wf-recorder)
# Commands:
#   select (default)
#   full
SCREENSHOT_DIR=~/Pictures/Screenshots
MENU_CMD="bemenu"
TEMP_FILE="/tmp/screenshot.png"
RECORD_TEMP_FILE="/tmp/record.mp4"

record_fps=60
record_audio=false

record=false
command=$1
if [ "$1" = "-r" ] || [ "$1" = "--record" ] ; then
  command=$2
  record=true
fi

if [ -z "$command" ] ; then
  command="select"
fi

get_geom ()
{
  if [ "$command" = "select" ] ; then
    return $(slurp)
  fi
  return false
}

screenshot ()
{
  grim $TEMP_FILE
  
  geom=$(get_geom)
  if [ "$geom" ] ; then
    grim -g "$geom" $TEMP_FILE
  fi
}

record_settings ()
{
  while true ; do
    record=$(echo $'start\naudio off\naudio on' | $MENU_CMD --prompt record)
    if [ "$record" = "" ] ; then
      exit 1
    elif [ "$record" = "audio on" ] ; then
      record_audio=true

    elif [ "$record" = "audio off" ] ; then
      record_audio=false

    elif [ "$record" = "start" ] ; then
      return true
    fi
  done
}

if $record ; then
  if ! killall wf-recorder ; then
    record_settings
    rm -f $RECORD_TEMP_FILE

    geom=$(get_geom)
    flags="-f $RECORD_TEMP_FILE --framerate $record_fps"
    if $record_audio ; then
      flags="$flags -a"
    fi
    if [ "$geom" ] ; then
      wf-recorder -g "$geom" $flags
    else
      wf-recorder $flags
    fi
    exit 0
  fi
else
  screenshot
fi

if $record ; then
  TEMP_FILE=$RECORD_TEMP_FILE
fi

cat $TEMP_FILE | wl-copy

action=$(echo $'save (yazi)\nffplay' | $MENU_CMD --prompt output )

if [ "$action" = "save (yazi)" ] ; then
  foot sh -c "yazi --chooser-file /tmp/screenshot_location $SCREENSHOT_DIR ; mv $TEMP_FILE \$(cat /tmp/screenshot_location)"
elif [ "$action" = "ffplay" ] ; then
  ffplay $TEMP_FILE
fi
